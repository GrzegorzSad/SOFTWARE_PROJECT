<h1>All Products</h1>

<% if (products.length === 0) { %>
    <p>No products available.</p>
<% } else { %>
    <ul>
        <% products.forEach(product => { %>
            <li>
                <h2><%= product.name %></h2>
                <p>Description: <%= product.description %></p>
                <p>Price: <%= product.price %></p>
                <!-- Display images for the product -->
                <img src ="<%= product.images[0]%>">
            </li>
        <% }) %>
    </ul>
<% } %>

