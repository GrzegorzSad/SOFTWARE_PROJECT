<div class="container-fluid bg-primary py-3">
  <div class="container-xl">
    <div class="container-xl d-flex">
      <div class="flex-fill">
        <h1>
          <%= user.username %>
        </h1>
        <a>
          <%= user.email %>
        </a>
        <!-- Add any other user details you want to display -->
      </div>
      <div class="profile-image ">
        <img src="<%= user.profileImgUrl %>" alt="Profile Image">
      </div>
    </div>
  </div>
</div>

<div class="container-fluid py-3">
  <div class="container-xl mt-3">
    <h3>Reviews</h3>
    <br>
    <a> Average Rating </a>
    <a>
      <%= averageRating %>
    </a>

    <div id="reviewCarousel" class="carousel slide pb-5" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% var index=0; %>
          <% reviews.forEach(review=> { %>
            <% if(index % 4===0) { %>
              <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <div class="container-fluid">
                  <div class="row row-cols-1 row-cols-md-2 row-cols-xl-4">
                    <% } %>
                      <div class="g-5 col">
                        <div class="card-body bg-primary p-3">
                          <p class="card-text">
                            <%= review.text %>
                          </p>
                          <p class="card-text">
                            <%= review.rating %>/5
                          </p>
                          <p class="card-text">By: <%= review.reviewer.username %>
                          </p>
                        </div>
                      </div>
                      <% if((index + 1) % 4===0 || (index + 1)===reviews.length) { %>
                  </div>
                </div>
              </div>
              <% } %>
                <% index++; %>
                  <% }); %>
      </div>

    </div>

    <div class="d-flex justify-content-center mt-3">
      <button class="btn btn-black text-light me-2" type="button" data-bs-target="#reviewCarousel"
        data-bs-slide="prev">Previous</button>
      <button class="btn btn-black text-light" type="button" data-bs-target="#reviewCarousel"
        data-bs-slide="next">Next</button>
    </div>


  </div>
</div>

<div class="container-fluid py-3">
  <div class="container-xl mt-3">
    <div id="productCarousel" class="carousel slide pb-5" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% var index=0; %>
          <% products.forEach(product=> { %>
            <% if(index % 6===0) { %>
              <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                <div class="container-fluid">
                  <div class="row row-cols-2 row-cols-md-6 row-cols-xl-8">
                    <% } %>
                      <div class="col">
                        <img class="card-img-top" src="<%= product.images[0] %>">
                        <h2>
                          <a href="/products/<%= product._id %>">
                            <%= product.name %>
                          </a>
                        </h2>
                        <p>Description: <%= product.description %>
                        </p>
                        <p>Price: <%= product.price %>
                        </p>
                        <p>User: <%= product.userId.username %>
                        </p>
                      </div>
                      <% if((index + 1) % 8===0 || (index + 1)===products.length) { %>
                  </div>
                </div>
              </div>
              <% } %>
                <% index++; %>
                  <% }); %>
      </div>
    </div>

    <div class="d-flex justify-content-center mt-3">
      <button class="btn btn-black text-light me-2" type="button" data-bs-target="#productCarousel"
        data-bs-slide="prev">Previous</button>
      <button class="btn btn-black text-light" type="button" data-bs-target="#productCarousel"
        data-bs-slide="next">Next</button>
    </div>











